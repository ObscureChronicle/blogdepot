---
// props: name, baseData, dlcData, traitsBase, traitsDLC, biography, battlesBase, battlesDLC, equipments, links

type TraitWikiProps = {
    intro: string;
    level: number;
    baseEnable: number;
    dlcEnable: number;
    baseData: string;
    dlcData: string;
    owner: string[];
};

const {
    intro,level,baseEnable,dlcEnable,
    baseData,
    dlcData,owner
} = Astro.props as TraitWikiProps;

const basename = '《后汉稽异录》';
const dlcname = '《后汉稽异录外传：星命诀》';
const basename_short = '本传';
const dlcname_short = '星命诀';
const ordinary_trait = `<span style="color: #5bae23">顶级专属个人特性</span>`;
const super_trait = `<span style="color: #2775b6">专属个人特性</span>`;
const bad_trait = `<span style="color: #de1c31">负面个人特性</span>`;
---
{
    !baseData && !dlcData ? <div>背景人物。</div> : (
        <p>
            {baseData && basename}{baseData && dlcData && '与'}{dlcData && dlcname}中的{ordinary_trait}。
        </p>
        <h2 class="bg-blue-100 text-blue-800 text-2xl font-bold px-2.5 pt-1.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 inline-block"></h2>
    )
}

{
    owner && (
        <>
            <h2 class="bg-blue-100 text-blue-800 text-2xl font-bold px-2.5 pt-1.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 inline-block">持有人</h2>
            <p class="whitespace-pre-line text-base leading-relaxed">{owner}</p>
        </>
    )
}

{
    owner && (
        <>
            <h2 class="bg-blue-100 text-blue-800 text-2xl font-bold px-2.5 pt-1.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 inline-block">持有人</h2>
            <p class="whitespace-pre-line text-base leading-relaxed">{owner}</p>
        </>
    )
}